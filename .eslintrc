{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "jasmine": true,
    "node": true,
    "jest": true
  },
  "plugins": ["prettier"],
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react",
    "plugin:testing-library/recommended",
    "plugin:jest-dom/recommended"
  ],
  "rules": {
    "prettier/prettier": "error",
    "react/jsx-props-no-spreading": "off",
    "react/jsx-no-bind": "off",
    "react/forbid-prop-types": "off"
  },
  "settings": {
    "import/core-modules": ["test-utils"]
  }
}
